generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  name          String?
  email         String          @unique
  password      String
  Convertion    Convertion[]
  Cryptcurrency Cryptcurrency[]
}

model Convertion {
  id        Int     @id @default(autoincrement())
  currency  String
  value     Decimal
  value_usd Decimal
  value_brl Decimal
  user_id   Int?
  user      User?   @relation(fields: [user_id], references: [id])
}

model Cryptcurrency {
  id       Int    @id @default(autoincrement())
  currency String @unique
  user_id  Int?
  user     User?  @relation(fields: [user_id], references: [id])
}
